{
    "manifest_version": 2,
    "name": "Researchy",
    "version": "0.0.0.1",
    "description": "A simple Chrome extension for making pages readable and auto-highlighting and bolding key terms.",
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_title": "Researchy Chrome Extension",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "http://*/",
        "https://*/",
        "webRequest",
        "identity",
        "identity.email"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "modules/jquery.min.js",
                "modules/quill/quill.core.js",
                "modules/FileSystem.js",
                "modules/utils.js",
                "content/content.js",
                "content/sidebar.js"
            ],
            "css": ["css/hideScrollbar.css", "css/sidebarRelated.css"]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/**; object-src 'self'",
    "background": {
        "scripts": [
            "background/hot-reload.js",
            "modules/jquery.min.js",
            "modules/quill/quill.core.js",
            "modules/FileSystem.js",
            "modules/MessageHandler.js",
            "modules/utils.js",
            "background/fsMessageHandler.js",
            "background/background.js"
        ]
    },
    "web_accessible_resources": ["html/sidebar.html", "**.js", "**.css"],
    "oauth2": {
        "client_id": "791991284503-42csc8frdl1tiu20lh7kobk15l7bjqb8.apps.googleusercontent.com",
        "scopes": [""]
    }
}
